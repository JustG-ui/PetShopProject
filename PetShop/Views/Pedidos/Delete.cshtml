@model global::PetShop.Models.Pedidos

@{
    ViewData["Title"] = "Exclusão de Pedido";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h3>Confirma exclusão deste pedido?</h3>
<div>
    <h4>Pedido</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Serviço
        </dt>
        <dd class="col-sm-10">
            @Model.Servico?.tipoServico
        </dd>
        <dt class="col-sm-2">
            Animal
        </dt>
        <dd class="col-sm-10">
            @Model.Animal?.nomeAnimal
        </dd>
        <dt class="col-sm-2">
            Empregado
        </dt>
        <dd class="col-sm-10">
            @Model.Empregado?.NomeEmpregado
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ServicoId" />
        <input type="hidden" asp-for="AnimalId" />
        <input type="hidden" asp-for="EmpregadoId" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
