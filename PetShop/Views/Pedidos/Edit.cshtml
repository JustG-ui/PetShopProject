@model global::PetShop.Models.Pedidos

@{
    ViewData["Title"] = "Edição de Pedido";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h4>Pedido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ServicoId" />
            <input type="hidden" asp-for="AnimalId" />
            <input type="hidden" asp-for="EmpregadoId" />

            <div class="form-group">
                <label asp-for="ServicoId" class="control-label"></label>
                <input asp-for="ServicoId" class="form-control" />
                <span asp-validation-for="ServicoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnimalId" class="control-label"></label>
                <input asp-for="AnimalId" class="form-control" />
                <span asp-validation-for="AnimalId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmpregadoId" class="control-label"></label>
                <input asp-for="EmpregadoId" class="form-control" />
                <span asp-validation-for="EmpregadoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Gravar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar para a lista de pedidos</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
