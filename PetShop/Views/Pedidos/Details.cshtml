@model global::PetShop.Models.Pedidos

@{
    ViewData["Title"] = "Detalhes do Pedido";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Pedido</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Serviço
        </dt>
        <dd class="col-sm-10">
            @Model.Servicos?.tipoServico
        </dd>
        <dt class="col-sm-2">
            Animal
        </dt>
        <dd class="col-sm-10">
            @Model.Animais?.nomeAnimal
        </dd>
        <dt class="col-sm-2">
            Empregado
        </dt>
        <dd class="col-sm-10">
            @Model.Empregados?.NomeEmpregado
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit"
       asp-route-servicoId="@Model.ServicoId"
       asp-route-animalId="@Model.AnimalId"
       asp-route-empregadoId="@Model.EmpregadoId">Editar</a> |
    <a asp-action="Index">Retornar para a lista de pedidos</a>
</div>
