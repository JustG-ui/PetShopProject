@model global::PetShop.Models.Pedidos

@{
    ViewData["Title"] = "Cadastrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h4>Pedido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ServicoId" class="control-label">Serviço</label>
                <select asp-for="ServicoId" class="form-control" asp-items="ViewBag.ServicoId"></select>
                <span asp-validation-for="ServicoId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="AnimalId" class="control-label">Animal</label>
                <select asp-for="AnimalId" class="form-control" asp-items="ViewBag.AnimalId"></select>
                <span asp-validation-for="AnimalId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="EmpregadoId" class="control-label">Empregado</label>
                <select asp-for="EmpregadoId" class="form-control" asp-items="ViewBag.EmpregadoId"></select>
                <span asp-validation-for="EmpregadoId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <br />
        </form>
    </div>
    <br />
    <a asp-action="Index" class="link-secondary text-decoration-none">Voltar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
