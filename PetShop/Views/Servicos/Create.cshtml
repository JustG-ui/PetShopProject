@model global::PetShop.Models.Servicos

@{
    ViewData["Title"] = "Serviços";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cadastrar</h1>

<h4>Serviços</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="tipoServico" class="control-label">Tipo de Serviço</label>
                <input asp-for="tipoServico" class="form-control" />
                <span asp-validation-for="tipoServico" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="preco" class="control-label">Preço</label>
                <input asp-for="preco" class="form-control" />
                <span asp-validation-for="preco" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="data" class="control-label">Data</label>
                <input asp-for="data" type="date" class="form-control" />
                <span asp-validation-for="data" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <br />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="link-secondary text-decoration-none">Voltar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
