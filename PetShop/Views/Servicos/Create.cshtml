@model PetShop.Models.Servicos

@{
    ViewData["Title"] = "Create Servico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Servico</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="tipoServico" class="control-label">Tipo de Serviço</label>
                <select asp-for="tipoServico" class="form-control" asp-items="Html.GetEnumSelectList<TipoServico>()"></select>
                <span asp-validation-for="tipoServico" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="preco" class="control-label">Preço</label>
                <input asp-for="preco" class="form-control" />
                <span asp-validation-for="preco" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="data" class="control-label">Data</label>
                <input asp-for="data" type="date" class="form-control" />
                <span asp-validation-for="data" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
